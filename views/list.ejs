            <div class="item">
                <input type="checkbox" name = "checkbox" value="<%= item._id%>" onChange="this.form.submit()">
                <p>
                    <%= item.name %>
                </p>
            </div>
        </form>
        <% }); %>

        
                <form action="/list" method="POST" style="display: flex; justify-content: space-between; margin-top: 10px;">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" style="height: 27px;">
                    <button type="submit" name="button" value="Today">+</button>
                </form>
    </div>

